      ctags \
      ntpdate \
      iperf3 \
      wvdial \
      python-numpy \
      sshpass \
      nscd \
      python2-paramiko \
      python-pyroute2 \
      python-netifaces \
      python2-scipy \
      python2-matplotlib"
  fi
    $SUDO $INSTALLER install -y $PACKAGE_LIST

    $SUDO rm -fr /opt/ssh
